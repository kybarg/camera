{
  "name": "@kybarg/camera",
  "version": "0.0.4",
  "description": "Node.js Addons to work with web cameras",
  "main": "addon.js",
  "types": "index.d.ts",
  "private": false,
  "keywords": [
    "camera",
    "webcam",
    "video",
    "capture",
    "native",
    "addon",
    "media-foundation",
    "windows"
  ],
  "files": [
    "addon.js",
    "index.d.ts",
    "build/Release/addon.node",
    "binding.gyp",
    "*.cc",
    "*.h"
  ],
  "scripts": {
    "build": "node-gyp rebuild",
    "test": "node tests/test-claim-device.js",
    "test:all": "node tests/test-claim-device.js && node tests/camera-claim-test.js && node tests/test-symlink-persistence.js",
    "example": "node examples/example.js",
    "example:format": "node examples/format-example.js",
    "example:devices": "node examples/devices-status-example.js",
    "example-ts": "npx ts-node examples/typescript-example.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run type-check"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^7.1.1",
    "node-gyp": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "sharp": "^0.34.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
